/* pages/login/login.wxss */

.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #4A90E2 0%, #357ABD 100%);
  display: flex;
  flex-direction: column;
  padding: 60rpx 40rpx 40rpx;
  box-sizing: border-box;
}

/* 登录头部 */
.login-header {
  text-align: center;
  margin-bottom: 80rpx;
}

.logo {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 30rpx;
}

.app-name {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 16rpx;
}

.app-desc {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 登录内容区 */
.login-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.login-section {
  background-color: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  padding: 60rpx 40rpx;
  margin-bottom: 40rpx;
  backdrop-filter: blur(10rpx);
}

.welcome-text {
  text-align: center;
  margin-bottom: 60rpx;
}

.welcome-title {
  display: block;
  font-size: 40rpx;
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 16rpx;
}

.welcome-subtitle {
  display: block;
  font-size: 28rpx;
  color: #7f8c8d;
}

/* 用户预览 */
.user-preview {
  background-color: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  padding: 60rpx 40rpx;
  margin-bottom: 40rpx;
  text-align: center;
  backdrop-filter: blur(10rpx);
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-bottom: 24rpx;
}

.user-name {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 16rpx;
}

.login-status {
  display: block;
  font-size: 24rpx;
  color: #999;
  margin-bottom: 30rpx;
}

.loading-indicator {
  display: flex;
  justify-content: center;
}

/* 功能介绍 */
.features-intro {
  background-color: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  padding: 40rpx;
  backdrop-filter: blur(10rpx);
}

.intro-title {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 30rpx;
  text-align: center;
}

.feature-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.feature-item {
  display: flex;
  align-items: center;
}

.feature-icon {
  width: 60rpx;
  height: 60rpx;
  background-color: #f8f9fa;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.feature-text {
  flex: 1;
}

.feature-name {
  display: block;
  font-size: 28rpx;
  font-weight: 500;
  color: #2c3e50;
  margin-bottom: 6rpx;
}

.feature-desc {
  display: block;
  font-size: 24rpx;
  color: #7f8c8d;
  line-height: 1.4;
}

/* 页面底部 */
.login-footer {
  margin-top: auto;
  padding-top: 40rpx;
}

.agreement-text {
  text-align: center;
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.7);
  margin-bottom: 30rpx;
  line-height: 1.5;
}

.agreement-link {
  color: rgba(255, 255, 255, 0.9);
  text-decoration: underline;
}

.footer-actions {
  display: flex;
  justify-content: center;
}

/* 按钮样式覆盖 */
.btn-secondary {
  background-color: rgba(255, 255, 255, 0.2);
  color: rgba(255, 255, 255, 0.9);
  border: 2rpx solid rgba(255, 255, 255, 0.3);
}

.btn-secondary:active {
  background-color: rgba(255, 255, 255, 0.3);
}

/* 响应式适配 */
@media screen and (max-width: 750rpx) {
  .container {
    padding: 40rpx 30rpx 30rpx;
  }
  
  .logo {
    width: 140rpx;
    height: 140rpx;
  }
  
  .app-name {
    font-size: 42rpx;
  }
  
  .login-section,
  .user-preview,
  .features-intro {
    padding: 40rpx 30rpx;
  }
  
  .welcome-title {
    font-size: 36rpx;
  }
  
  .feature-item {
    gap: 16rpx;
  }
  
  .feature-icon {
    width: 50rpx;
    height: 50rpx;
    font-size: 24rpx;
    margin-right: 16rpx;
  }
}