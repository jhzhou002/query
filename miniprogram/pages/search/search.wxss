/* pages/search/search.wxss */

.container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 40rpx;
}

/* 搜索表单 */
.search-form {
  background-color: #fff;
  margin: 20rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.form-header {
  padding: 40rpx 30rpx 20rpx;
  text-align: center;
  border-bottom: 1rpx solid #f0f0f0;
}

.form-title {
  display: block;
  font-size: 36rpx;
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 8rpx;
}

.form-subtitle {
  display: block;
  font-size: 24rpx;
  color: #999;
}

.form-content {
  padding: 30rpx;
}

.input-group {
  margin-bottom: 30rpx;
}

.input-label {
  display: block;
  font-size: 28rpx;
  color: #2c3e50;
  margin-bottom: 12rpx;
  font-weight: 500;
}

.input-field {
  width: 100%;
  padding: 24rpx 20rpx;
  border: 2rpx solid #e9ecef;
  border-radius: 12rpx;
  font-size: 28rpx;
  background-color: #fff;
  box-sizing: border-box;
}

.input-field:focus {
  border-color: #4A90E2;
}

.platform-picker {
  width: 100%;
}

.picker-display {
  padding: 24rpx 20rpx;
  border: 2rpx solid #e9ecef;
  border-radius: 12rpx;
  font-size: 28rpx;
  background-color: #fff;
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #666;
}

.picker-arrow {
  color: #ccc;
  font-size: 20rpx;
}

.search-btn {
  margin-top: 20rpx;
  font-size: 32rpx;
}

/* 搜索历史 */
.search-history {
  background-color: #fff;
  margin: 20rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.history-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.history-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #2c3e50;
}

.history-clear {
  font-size: 24rpx;
  color: #999;
  padding: 8rpx 16rpx;
}

.history-list {
  padding: 0 30rpx;
}

.history-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.history-item:last-child {
  border-bottom: none;
}

.history-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.history-number {
  font-size: 28rpx;
  color: #2c3e50;
  font-weight: 500;
}

.history-platform {
  font-size: 22rpx;
  color: #4A90E2;
  background-color: rgba(74, 144, 226, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 10rpx;
  align-self: flex-start;
}

.history-time {
  font-size: 20rpx;
  color: #999;
}

.history-delete {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #ccc;
  font-size: 28rpx;
  background-color: #f8f9fa;
  border-radius: 50%;
}

/* 搜索结果 */
.search-results {
  margin: 20rpx;
}

.results-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 10rpx 16rpx;
}

.results-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #2c3e50;
}

.results-count {
  flex: 1;
  text-align: center;
  font-size: 24rpx;
  color: #999;
}

.results-clear {
  font-size: 24rpx;
  color: #999;
  padding: 8rpx 16rpx;
}

.results-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.result-item {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.result-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.result-platform {
  flex: 1;
}

.platform-name {
  display: inline-block;
  background: linear-gradient(135deg, #4A90E2 0%, #357ABD 100%);
  color: #fff;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: 500;
  margin-bottom: 12rpx;
}

.result-number {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #2c3e50;
}

.result-points {
  text-align: center;
  background-color: #f8f9fa;
  padding: 16rpx 20rpx;
  border-radius: 12rpx;
  border-left: 4rpx solid #28a745;
}

.points-value {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #28a745;
  margin-bottom: 4rpx;
}

.points-label {
  font-size: 20rpx;
  color: #999;
}

.result-content {
  margin-bottom: 24rpx;
}

.result-notes {
  background-color: #f8f9fa;
  padding: 20rpx;
  border-radius: 12rpx;
  margin-bottom: 12rpx;
}

.notes-label {
  font-size: 24rpx;
  color: #666;
  font-weight: 500;
}

.notes-text {
  font-size: 26rpx;
  color: #333;
  line-height: 1.5;
}

.result-time {
  font-size: 22rpx;
  color: #999;
}

.result-actions {
  display: flex;
  gap: 16rpx;
  justify-content: flex-end;
}

/* 空结果 */
.empty-results {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 60rpx 40rpx;
  text-align: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.empty-title {
  display: block;
  font-size: 32rpx;
  color: #2c3e50;
  font-weight: 500;
  margin-bottom: 16rpx;
}

.empty-desc {
  display: block;
  font-size: 24rpx;
  color: #999;
  margin-bottom: 30rpx;
  line-height: 1.5;
}

.empty-suggestions {
  text-align: left;
  background-color: #f8f9fa;
  padding: 20rpx;
  border-radius: 12rpx;
  border-left: 4rpx solid #17a2b8;
}

.suggestions-title {
  display: block;
  font-size: 24rpx;
  color: #17a2b8;
  font-weight: 500;
  margin-bottom: 12rpx;
}

.suggestion-item {
  display: block;
  font-size: 22rpx;
  color: #666;
  margin-bottom: 8rpx;
  line-height: 1.4;
}

/* 登录提示 */
.login-required {
  background-color: #fff;
  margin: 20rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.login-prompt {
  padding: 60rpx 40rpx;
  text-align: center;
}

.prompt-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.prompt-title {
  display: block;
  font-size: 32rpx;
  color: #2c3e50;
  font-weight: 500;
  margin-bottom: 16rpx;
}

.prompt-desc {
  display: block;
  font-size: 24rpx;
  color: #999;
  margin-bottom: 40rpx;
}

/* VIP提示 */
.vip-tip {
  background: linear-gradient(135deg, #ffd700 0%, #ff8c00 100%);
  margin: 20rpx;
  border-radius: 16rpx;
  padding: 24rpx 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(255, 140, 0, 0.3);
}

.tip-content {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.tip-icon {
  font-size: 48rpx;
}

.tip-text {
  flex: 1;
}

.tip-title {
  display: block;
  font-size: 28rpx;
  color: #fff;
  font-weight: 600;
  margin-bottom: 6rpx;
}

.tip-desc {
  display: block;
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.9);
}

.tip-action {
  background-color: rgba(255, 255, 255, 0.2);
  color: #fff;
  padding: 12rpx 24rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
}

/* 响应式适配 */
@media screen and (max-width: 750rpx) {
  .result-header {
    flex-direction: column;
    gap: 16rpx;
  }
  
  .result-points {
    align-self: flex-end;
  }
  
  .result-actions {
    justify-content: center;
  }
  
  .tip-content {
    flex-direction: column;
    text-align: center;
    gap: 16rpx;
  }
}