/* app.wxss 全局样式 */

/* 通用样式重置 */
page {
  background-color: #f5f5f5;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Helvetica Neue', Arial, sans-serif;
  font-size: 14px;
  color: #333;
  line-height: 1.4;
}

/* 容器类 */
.container {
  padding: 20rpx;
  min-height: 100vh;
  box-sizing: border-box;
}

.page-container {
  padding: 30rpx;
  background-color: #fff;
  margin: 20rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

/* 卡片样式 */
.card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 20rpx;
}

.card-content {
  color: #666;
  line-height: 1.6;
}

/* 按钮样式 */
.btn {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 24rpx 40rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: 500;
  transition: all 0.3s ease;
  border: none;
  outline: none;
}

.btn-primary {
  background: linear-gradient(135deg, #4A90E2 0%, #357ABD 100%);
  color: #fff;
}

.btn-primary:active {
  transform: scale(0.98);
  opacity: 0.9;
}

.btn-secondary {
  background-color: #f8f9fa;
  color: #6c757d;
  border: 2rpx solid #e9ecef;
}

.btn-success {
  background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
  color: #fff;
}

.btn-warning {
  background: linear-gradient(135deg, #ffc107 0%, #fd7e14 100%);
  color: #212529;
}

.btn-danger {
  background: linear-gradient(135deg, #dc3545 0%, #e83e8c 100%);
  color: #fff;
}

.btn-full {
  width: 100%;
}

.btn-large {
  padding: 32rpx 48rpx;
  font-size: 32rpx;
}

.btn-small {
  padding: 16rpx 24rpx;
  font-size: 24rpx;
}

/* 输入框样式 */
.input-group {
  margin-bottom: 30rpx;
}

.input-label {
  display: block;
  font-size: 28rpx;
  color: #2c3e50;
  margin-bottom: 12rpx;
  font-weight: 500;
}

.input-field {
  width: 100%;
  padding: 24rpx 30rpx;
  border: 2rpx solid #e9ecef;
  border-radius: 12rpx;
  font-size: 28rpx;
  background-color: #fff;
  box-sizing: border-box;
  transition: border-color 0.3s ease;
}

.input-field:focus {
  border-color: #4A90E2;
  outline: none;
}

.input-field.error {
  border-color: #dc3545;
}

/* 列表样式 */
.list {
  background-color: #fff;
  border-radius: 16rpx;
  overflow: hidden;
}

.list-item {
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  display: flex;
  align-items: center;
  transition: background-color 0.3s ease;
}

.list-item:last-child {
  border-bottom: none;
}

.list-item:active {
  background-color: #f8f9fa;
}

.list-item-content {
  flex: 1;
}

.list-item-title {
  font-size: 28rpx;
  color: #2c3e50;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.list-item-desc {
  font-size: 24rpx;
  color: #999;
}

.list-item-arrow {
  width: 20rpx;
  height: 20rpx;
  border-top: 3rpx solid #ccc;
  border-right: 3rpx solid #ccc;
  transform: rotate(45deg);
  margin-left: 20rpx;
}

/* 标签样式 */
.tag {
  display: inline-block;
  padding: 8rpx 16rpx;
  font-size: 22rpx;
  border-radius: 20rpx;
  background-color: #f8f9fa;
  color: #6c757d;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
}

.tag-primary {
  background-color: rgba(74, 144, 226, 0.1);
  color: #4A90E2;
}

.tag-success {
  background-color: rgba(40, 167, 69, 0.1);
  color: #28a745;
}

.tag-warning {
  background-color: rgba(255, 193, 7, 0.1);
  color: #ffc107;
}

.tag-danger {
  background-color: rgba(220, 53, 69, 0.1);
  color: #dc3545;
}

/* VIP 标识 */
.vip-badge {
  display: inline-flex;
  align-items: center;
  padding: 8rpx 16rpx;
  background: linear-gradient(135deg, #ffd700 0%, #ff8c00 100%);
  color: #fff;
  border-radius: 20rpx;
  font-size: 20rpx;
  font-weight: 600;
  margin-left: 10rpx;
}

/* 状态样式 */
.status-success {
  color: #28a745;
}

.status-warning {
  color: #ffc107;
}

.status-danger {
  color: #dc3545;
}

.status-info {
  color: #17a2b8;
}

/* 加载状态 */
.loading {
  text-align: center;
  padding: 40rpx;
  color: #999;
}

.loading-spinner {
  display: inline-block;
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #4A90E2;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-right: 10rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 80rpx 40rpx;
  color: #999;
}

.empty-icon {
  font-size: 120rpx;
  color: #ddd;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 分割线 */
.divider {
  height: 1rpx;
  background-color: #f0f0f0;
  margin: 30rpx 0;
}

/* 工具类 */
.text-center { text-align: center; }
.text-left { text-align: left; }
.text-right { text-align: right; }

.mt-10 { margin-top: 10rpx; }
.mt-20 { margin-top: 20rpx; }
.mt-30 { margin-top: 30rpx; }
.mb-10 { margin-bottom: 10rpx; }
.mb-20 { margin-bottom: 20rpx; }
.mb-30 { margin-bottom: 30rpx; }

.p-10 { padding: 10rpx; }
.p-20 { padding: 20rpx; }
.p-30 { padding: 30rpx; }

.flex { display: flex; }
.flex-1 { flex: 1; }
.flex-center { align-items: center; justify-content: center; }
.flex-between { justify-content: space-between; }
.flex-column { flex-direction: column; }

/* 响应式隐藏类 */
@media screen and (max-width: 750px) {
  .hide-mobile {
    display: none !important;
  }
}